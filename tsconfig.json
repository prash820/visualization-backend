{
  "compilerOptions": {
      "target": "ES6",
      "module": "commonjs",
      "outDir": "./dist",
      "rootDir": "./src",
      "strict": true,
      "esModuleInterop": true,
      "typeRoots": ["./node_modules/@types", "./src/types"],
      "moduleResolution": "node",
      "skipLibCheck": true
  },
  "include": ["src/**/*"]
}
