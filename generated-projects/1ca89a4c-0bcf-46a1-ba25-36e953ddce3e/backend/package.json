{
  "name": "lambda-backend",
  "version": "1.0.0",
  "description": "A Node.js backend deployed as an AWS Lambda function",
  "main": "src/index.ts",
  "scripts": {
    "build": "tsc",
    "dev": "ts-node src/index.ts",
    "deploy": "serverless deploy",
    "test": "jest",
    "dev:local": "ts-node-dev --respawn --transpile-only src/index.ts",
    "start:local": "node dist/index.js",
    "serverless:local": "node local-server.js",
    "build:local": "tsc",
    "test:local": "jest",
    "lint:local": "eslint src --ext .ts"
  },
  "dependencies": {
    "@aws-sdk/client-dynamodb": "^3.32.0",
    "cors": "^2.8.5",
    "express": "^4.17.1",
    "helmet": "^4.6.0",
    "jsonwebtoken": "^8.5.1",
    "morgan": "^1.10.0",
    "serverless-http": "^2.7.0"
  },
  "devDependencies": {
    "@types/aws-lambda": "^8.10.76",
    "@types/express": "^4.17.13",
    "@types/jest": "^27.0.0",
    "@types/morgan": "^1.9.3",
    "@types/node": "^16.11.7",
    "jest": "^27.0.0",
    "serverless": "^2.66.2",
    "serverless-offline": "^14.4.0",
    "ts-node": "^10.4.0",
    "typescript": "^4.4.4",
    "ts-node-dev": "^2.0.0"
  }
}
